<% content_for :head do %>
  <%= auto_discovery_link_tag(:rss, projects_url(format: "rss")) %>
<% end %>

<h1 class='text-3xl mb-4'>Recent Projects</h1>
<% Project.find_each do |project| %>
  <%= link_to project.url, target: '_blank', rel: 'noreferrer', class: 'flex flex-row mb-6 p-6 border border-[#eaeaea] rounded bg-white shadow text-justify w-full text-black no-underline' do %>
    <div class='p-4 w-1/3 align-middle m-auto'>
      <img src="<%= project.image %>" alt="<%= project.title %>" class='m-auto' />
    </div>
    <div class='m-auto'>
      <h2 class='text-2xl text-left'><%= project.title %></h2>
      <p class='text-sm text-[#999] my-2'>Status: <%= project.status %></p>
      <p class='mb-0'><%= project.description %></p>
    </div>
  <% end %>
<% end %>
