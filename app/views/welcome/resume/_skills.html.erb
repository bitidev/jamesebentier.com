<div class='my-4'>
  <div class="relative mb-2 after:absolute after:left-0 after:top-3 after:h-px after:w-full after:bg-[#ccc] after:block after:content-[''] after:-z-10">
    <h2 class='pr-4 bg-white text-[#ff6d1f] inline-block uppercase font-semibold text-base mb-0'>Skills</h2>
  </div>
  <div class='flex flex-row justify-between'>
    <% skills.each do |data| %>
      <div class='w-1/3 px-4'>
        <h3 class='text-base font-semibold'><%= data[:name] %></h3>
        <div class='mb-2'>
          <em class='color-[#757575]'><%= data[:level] %></em>
          <div class="bar border border-[#dddddd] w-full h-2 relative block after:absolute after:content-[' '] after:top-0 after:left-0 after:h-2 <%= style_for_level(data[:level]) %>"></div>
        </div>
        <ul class='list-none p-0'>
          <% data[:keywords].each do |keyword| %>
            <li class='inline-block m-1 p-2 text-xs leading-none lowercase text-[#3e6d8e] bg-[#dfeaf1] text-nowrap'><%= keyword %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
